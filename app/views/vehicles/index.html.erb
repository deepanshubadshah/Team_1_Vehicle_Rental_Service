<h1>Listing Vehicles</h1>
<style>
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    border: 1px solid #e7e7e7;
    background-color: #f3f3f3;
  }

  li {
    float: left;
  }

  li a {
    display: block;
    color: #666;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }

  li a:hover:not(.active) {
    background-color: #ddd;
  }

  li a.active {
    color: white;
    background-color: #4CAF50;
  }
</style>
<ul>
  <li><a href=<%= edit_agent_url(current_agent.id) %>>Edit Agent Profile</a></li>
  <li><a href=<%= new_booking_url %>>New Booking</a></li>
  <li><a class="active">Inventory Management</a></li>
</ul>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Model</th>
      <th>Manufacturer</th>
      <th>Is AC</th>
      <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.category %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.manufacturer %></td>
        <td><%= vehicle.isAc %></td>
        <td><%= vehicle.cost %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path %>

<%= form_for(@vehicle) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %>
    <%#= f.text_field :category %>
    <%= f.select("category", "<option>4 Seater</option><option>5 Seater</option><option>7 Seater</option>".html_safe) %>
  </div>
  <div class="field">
    <%= f.label :model %>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :manufacturer %>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label :isAc, "Is AC:" %>
    <%= f.check_box :isAc %>
  </div>
  <div class="field">
    <%= f.label :cost %>
    <%= f.number_field :cost %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <input type="reset" name="Reset">
  </div>
<% end %>
